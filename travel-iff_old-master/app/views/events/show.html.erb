<div class='page-header'>
  <h1>
    <%= t('Event Info') %>
    <div class='pull-right'>
      <%= link_to edit_event_path(@event), class: 'btn btn-info' do %>
        <i class='glyphicon glyphicon-pencil'></i> <%= t('Edit') %>
      <% end %>
      <%= link_to events_path, class: 'btn btn-warning' do %>
        <i class='glyphicon glyphicon-backward'></i> <%= t('Back') %>
      <% end %>
    </div>
  </h1>
</div>

<div class='panel panel-default'>
  <div class='panel-body'>
    <p>
      <strong><%=t("Name")%></strong>
      <%= @event.name %>
    </p>
    <p>
      <strong><%=t("Day")%></strong>
      <%= @event.day %>
    </p>
    <p>
      <strong><%=t("Description")%></strong>
      <%= @event.description %>
    </p>
    <p>
      <strong><%=t("Travell")%></strong>
      <%= @event.travel.name %>
    </p>
    <p>
      <h1><%=t("Students")%></h1>
      <% @event.student_events.each do |student_event| %>
      <li>
        <%= student_event.student.person.name %>
      </li>  
      <% end %>
    </p>
  </div>
</div>