<div class='page-header'>
  <h1><%= t('Editing Student') %>
    <div class='pull-right'>
      <%= link_to students_path, class: 'btn btn-warning' do %>
        <i class='glyphicon glyphicon-backward'></i> <%= t('Back') %>
      <% end %>
    </div>
  </h1>
</div>

<%= simple_form_for @student, wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>
<div class="form-horizontal col-sm-offset-1 col-sm-7">
  <div class="panel panel-info">
  <div class="panel-heading "><%=t("Table_student")%></div>
    <div class="panel-body">
      <div class="form-inputs">
          <%= f.simple_fields_for :person, wrapper: :horizontal_form do |person| %>
            <%= person.input :name %>
            <%= person.input :phone %>
            <%= person.input :identity %>
            <%= person.input :cpf %>
            <%= person.input :birth, as: :bootstrap_datepicker, input_html: {class: "form-control"} %>
            <%= person.hidden_field :id, value: @person.id %>
          <% end %>
          <%= f.input :registration, as: :file, wrapper: :horizontal_form %>

		      <%= f.simple_fields_for :student_events, wrapper: :horizontal_form do |student_event| %>
            <%= student_event.input :event_id, collection: @events %>
            <!--%= student_event.hidden_field :student_events_ids, value: @event.id %-->
          <% end %>
      </div>

      <div class="form-actions">
          <%= f.button :submit, class: "btn btn-info" %>
      </div>
    </div>  
  </div>
</div>     
<% end %>
