<%= simple_form_for @bus_company, wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>
<div class="form-horizontal col-sm-offset-1 col-sm-7">
  <div class="panel panel-info">
  <div class="panel-heading "><%=t("Table_bus_company")%></div>
    <div class="panel-body">
      <div class="form-inputs">
          <%= f.input :cnpj %>
          <%= f.input :name %>
      </div>

      <div class="form-actions">
          <%= f.button :submit, class: "btn btn-info" %>
      </div>
    </div>  
  </div>
</div>     
<% end %>
