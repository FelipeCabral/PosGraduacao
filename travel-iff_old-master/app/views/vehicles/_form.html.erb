<%= simple_form_for @vehicle, wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>
<div class="form-horizontal col-sm-offset-1 col-sm-7">
  <div class="panel panel-info">
  <div class="panel-heading "><%=t("Table_vehicle")%></div>
    <div class="panel-body">
      <div class="form-inputs">
          <%= f.input :seat %>
          <%= f.input :order_number %>
          <%= f.input :price %>
          <%= f.association :travel %>
          <%= f.association :bus_company %>
      </div>

      <div class="form-actions">
          <%= f.button :submit, class: "btn btn-info" %>
      </div>
    </div>  
  </div>
</div>     
<% end %>
