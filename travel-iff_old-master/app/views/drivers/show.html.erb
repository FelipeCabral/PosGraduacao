<div class='page-header'>
  <h1>
    <%= t('Driver Info') %>
    <div class='pull-right'>
      <%= link_to edit_driver_path(@driver), class: 'btn btn-info' do %>
        <i class='glyphicon glyphicon-pencil'></i> <%= t('Edit') %>
      <% end %>
      <%= link_to drivers_path, class: 'btn btn-warning' do %>
        <i class='glyphicon glyphicon-backward'></i> <%= t('Back') %>
      <% end %>
    </div>
  </h1>
</div>

<div class='panel panel-default'>
  <div class='panel-body'>
    <p>
      <strong><%=t("Name")%></strong>
      <%= @driver.person.name %>
    </p>
    <p>
      <strong><%=t("Phone")%></strong>
      <%= @driver.person.phone %>
    </p>
    <p>
      <strong><%=t("Identity")%></strong>
      <%= @driver.person.identity %>
    </p>
    <p>
      <strong><%=t("Cpf")%></strong>
      <%= @driver.person.cpf %>
    </p>
    <p>
      <strong><%=t("Birth")%></strong>
      <%= @driver.person.birth %>
    </p>
    <p>
      <strong><%=t("Cnh")%></strong>
      <%= @driver.cnh %>
    </p>
    <p>
      <strong><%=t("Category")%></strong>
      <%= @driver.category %>
    </p>
  </div>
</div>
